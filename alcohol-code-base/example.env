# Telegram Bot
BOT__TELEGRAM__BOT_TOKEN=your_bot_token_here
BOT__TELEGRAM__BOT_USERNAME=your_bot_username

# Webhook (опционально, для production)
# BOT__TELEGRAM__WEBHOOK_URL=https://yourdomain.com/webhook
# BOT__TELEGRAM__WEBHOOK_PATH=/webhook
# BOT__TELEGRAM__WEBHOOK_SECRET=your_webhook_secret

# n8n Integration
BOT__N8N__WEBHOOK_URL=https://your-n8n-instance.com/webhook/analyze-document
BOT__N8N__TIMEOUT=300

# Google Gemini
BOT__GEMINI__API_KEY=your_gemini_api_key_here
BOT__GEMINI__MODEL=gemini-2.5-flash
BOT__GEMINI__TIMEOUT=60

# Google Services
BOT__GOOGLE__CREDENTIALS_PATH=credentials.json
BOT__GOOGLE__DRIVE_FOLDER_ID=your_drive_folder_id
BOT__GOOGLE__SHEETS_TEMPLATE_ID=your_sheets_template_id

# Files Configuration
BOT__FILES__TEMP_DIR=temp
BOT__FILES__MAX_FILE_SIZE=52428800
BOT__FILES__ALLOWED_DOCUMENT_EXTENSIONS=[".pdf", ".docx", ".doc"]
BOT__FILES__ALLOWED_IMAGE_EXTENSIONS=[".jpg", ".jpeg", ".png", ".gif", ".bmp", ".webp", ".tiff", ".tif"]

# Security
BOT__SECURITY__ADMIN_USER_IDS=123456789,987654321
BOT__SECURITY__RATE_LIMIT_REQUESTS=10
BOT__SECURITY__RATE_LIMIT_WINDOW=60

# Processing
BOT__PROCESSING__MAX_CONCURRENT_PROCESSING=3
BOT__PROCESSING__PROCESSING_TIMEOUT=600

# Notifications
BOT__NOTIFICATIONS__CHAT_ID=your_notification_chat_id
BOT__NOTIFICATIONS__SEND_ERROR_NOTIFICATIONS=false

# Development
BOT__DEVELOPMENT__DEBUG=false
BOT__DEVELOPMENT__DEVELOPMENT_MODE=false

# Logging
BOT__LOG__LEVEL=INFO
BOT__LOG__FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"
BOT__LOG__FILE=logs/bot.log
BOT__LOG_DIR=logs